<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomewWork2android2" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white_red</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="button_ok">
        <item name="android:layout_width">186dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:text">Ok</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="backgroundTint">@color/white_red</item>
    </style>
    <style name="LifeTrack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/lifetrack</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">55sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawableStart">@drawable/ic_baseline_check_box_24</item>
    </style>
    <style name="button_standart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/white_red</item>
        <item name="elevation">@dimen/cardview_default_elevation</item>
        <item name="android:layout_marginStart">66dp</item>
        <item name="android:layout_marginEnd">66dp</item>
        <item name="android:padding">8dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/normal</item>
        <item name="cornerRadius">18dp</item>
    </style>
</resources>